{
  "manifest_version": 3,
  "name": "Flamingo Downloader Bridge",
  "version": "0.1.0",
  "description": "Send browser downloads to Flamingo Downloader",
  "permissions": ["downloads", "storage", "contextMenus", "webRequest"],
  "optional_permissions": ["nativeMessaging"],
  "host_permissions": ["http://127.0.0.1/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Flamingo Bridge"
  }
}
