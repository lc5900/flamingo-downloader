{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Flamingo Downloader",
  "version": "0.1.0",
  "identifier": "com.lc5900.flamingo.downloader",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "npm --prefix ./ui run build",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Flamingo Downloader",
        "width": 1260,
        "height": 820,
        "minWidth": 1080,
        "minHeight": 700,
        "resizable": true,
        "devtools": false,
        "backgroundColor": "#00000000",
        "transparent": true,
        "windowEffects": {
          "effects": [
            "mica",
            "acrylic",
            "blur",
            "hudWindow"
          ],
          "radius": 12
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "fileAssociations": [
      {
        "ext": [
          "torrent"
        ],
        "name": "BitTorrent File",
        "description": "BitTorrent metadata file",
        "mimeType": "application/x-bittorrent",
        "role": "Editor"
      }
    ],
    "resources": [
      "resources/**/*"
    ],
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}
